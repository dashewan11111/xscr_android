<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout.Xy"
    android:background="@color/gray_bg1"
    android:orientation="vertical"
    android:paddingTop="10dip" >

    <RelativeLayout
        style="@style/layout.Xy"
        android:background="@color/white"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" >

        <TextView
            style="@style/layout.xy"
            android:layout_centerInParent="true"
            android:text="热门话题"
            android:textColor="@color/black"
            android:textSize="15sp" >
        </TextView>

        <LinearLayout
            android:id="@+id/layout_homepage_group_topic_more"
            style="@style/layout.xy"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip" >

            <TextView
                style="@style/layout.xy"
                android:layout_marginRight="5dip"
                android:text="更多"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="7dip"
                android:layout_height="14dip"
                android:src="@drawable/arrow" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/homepage_group_topic_image"
        android:layout_width="match_parent"
        android:layout_height="230dip"
        android:paddingBottom="10dip"
        android:scaleType="fitXY"
        android:src="@drawable/img_default_672_280" />

</LinearLayout>