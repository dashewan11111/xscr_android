            android:layout_width="7dip"
            android:layout_height="14dip"
            android:layout_marginLeft="10dip"
            android:src="@drawable/arrow" />
    </LinearLayout>

    <include layout="@layout/line_gray_full" />

    <LinearLayout
        android:id="@+id/user_profile_level"
        style="@style/layout.arraw"
        android:layout_marginTop="10dip" >

        <TextView
            style="@style/text_black_12"
            android:layout_weight="1.0"
            android:text="等级" />

        <TextView
            android:id="@+id/user_profile_level_txt"
            style="@style/text_black_12"
            android:text="1级" />

        <ImageView
            android:layout_width="7dip"
            android:layout_height="14dip"
            android:layout_marginLeft="10dip"
            android:src="@drawable/arrow" />
