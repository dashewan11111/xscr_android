<?xml version="1.0"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 布局宽高的theme. -->
    <style name="layout" />

    <style name="layout.xy">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout.xY">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="layout.Xy">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout.XY">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="layout.arraw" parent="layout.Xy">
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">13dip</item>
        <item name="android:paddingBottom">13dip</item>
    </style>

    <style name="main_tab_item">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="main_tab_item_image">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="main_tab_item_text" parent="layout.xy">
        <item name="android:textSize">12sp</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:textColor">@color/bottom_label_selector</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="order_list_item_text" parent="layout.xy">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="order_detail_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/order_normal_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/order_opersion_btn_selector</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="rating_bar_big" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable_big</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">35dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:isIndicator">false</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="rating_bar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable</item>
        <item name="android:minHeight">17dip</item>
        <item name="android:maxHeight">17dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="rating_bar_small" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable_small</item>
        <item name="android:minHeight">11dip</item>
        <item name="android:maxHeight">11dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="produtc_comments_header_linearLayout" parent="layout.Xy">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="produtc_comments_header_text1" parent="layout.xy">
        <item name="android:textColor">@color/gray_2</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="produtc_comments_header_text2">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_1</item>
    </style>

    <style name="produtc_comments_header_relativeLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="produtc_comments_header_relativeLayout_text" parent="layout.xy">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/comment_text_selector</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="produtc_comments_header_relativeLayout_line" parent="layout.Xy">
        <item name="android:layout_height">3dp</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:background">@drawable/comment_line_selector</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="produtc_comments_header_relativeLayout_line_o" parent="layout.Xy">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/gray_line1</item>
    </style>

    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="sample_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="product_details_button">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/default_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="product_details_promotion_tag_text" parent="layout.xy">
        <item name="android:background">@color/purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_size</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogText">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DialogText.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="user_center_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        r</style>

    <style name="popup_anim">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="sample_number_text" parent="layout.xy">
        <item name="android:background">@drawable/cars_count</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">3</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="dialog_login_pop_style" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_login_pop_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_login_pop_exit</item>
    </style>

    <!-- 自定义 RatingBar 样式 2 -->
    <style name="RatingBar2">
        <item name="android:progressDrawable">@drawable/ratingbar_sm</item>
    </style>

    <style name="cart_btn_style" parent="layout.xY">
        <item name="android:background">@drawable/common_round_conner_bg_red</item>
        <item name="android:layout_width">90dip</item>
        <item name="android:layout_height">35dip</item>
        <item name="android:layout_margin">5dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_size_moderate</item>
    </style>

    <style name="cart_item_select_tag">
        <item name="android:layout_width">@dimen/default_checkbox_size</item>
        <item name="android:layout_height">@dimen/default_checkbox_size</item>
        <item name="android:padding">8dip</item>
    </style>

    <style name="sample_edittext_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowSoftInputMode">stateVisible|adjustPan</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!-- 进入时从底部往上，退出时从底部往下 -->
    <style name="win_ani_top_bottom">
        <item name="android:windowEnterAnimation">@anim/window_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/window_out_to_bottom</item>
    </style>

    <style name="community_fragment_tab_text">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="community_fragment_tab_devide_view">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">3dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@color/lightpurple</item>
    </style>

    <style name="item_topic_list_img">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">100dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/img_default_248</item>
    </style>

    <style name="product_list_filter">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:padding">10dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="text_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_gray" parent="text_base">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="text_black" parent="text_base">
        <item name="android:textColor">@color/gray_3</item>
    </style>

    <style name="text_gray_10" parent="text_gray">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="text_gray_12" parent="text_gray">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_gray_14" parent="text_gray">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_gray_16" parent="text_gray">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_black_10" parent="text_black">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="text_black_12" parent="text_black">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_black_14" parent="text_black">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_black_16" parent="text_black">
        <item name="android:textSize">16sp</item>
    </style>

</resources>